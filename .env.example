# Переменные окружения для разработки
NODE_ENV=development
DOMAIN=http://localhost:3005

# Тестирование на 80 порту
TESTING_PORT=80
TESTING_URL=http://localhost:80

# База данных
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/grindermaster"
POSTGRES_PASSWORD=postgres123
REDIS_PASSWORD=redis123

# JWT секреты (ЗАМЕНИТЕ НА СВОИ!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# Telegram Bot (ЗАМЕНИТЕ НА СВОИ!)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Email настройки (ЗАМЕНИТЕ НА СВОИ!)
SMTP_HOST=smtp.gmail.com
SMTP_USER=grinder_kirov@mailnesia.com
SMTP_PASS=your-app-password

# Production IP для админки (ЗАМЕНИТЕ НА СВОЙ!)
PRODUCTION_ADMIN_IP=YOUR_PRODUCTION_IP_HERE

# URL для production (ЗАМЕНИТЕ НА СВОИ!)
PRODUCTION_FRONTEND_URL=https://grindermaster.ru
PRODUCTION_API_URL=https://api.grindermaster.ru
PRODUCTION_ADMIN_URL=https://admin.grindermaster.ru

# Двухфакторная аутентификация
ENABLE_2FA=true

